#!/usr/bin/env groovy

pipeline {
    
    agent any

    parameters {
        string(name: 'IMAGE_TAG', defaultValue: 'latest', description: 'Docker image tag')
    }

    environment {
        MYSQL_USER_CREDENTIALS = credentials('MySQL_User_Credentials')
        MYSQL_ROOT_CREDENTIALS = credentials('MySQL_Root_Credentials')
        DOCKERHUB_REPO = "yuriypelykh"
        DOCKER_IMAGE_NAME = "ypwp-php-fpm"
    }
    
    stages {
        stage('Sync app volume') {
            steps {
                // echo "${IMAGE_TAG}"
                sh "docker run -d --rm --name temp --volume rocca_wp_app:/mnt/ ${DOCKERHUB_REPO}/${DOCKER_IMAGE_NAME}:16 sh -c 'cp -r ./* /mnt/'"
            }
        }
        
        stage('Deploy') {
            steps {
                // echo "${IMAGE_TAG}"
                sh '''MYSQL_USER=${MYSQL_USER_CREDENTIALS_USR} \
                      MYSQL_PASSWORD=${MYSQL_USER_CREDENTIALS_PSW} \
                      docker-compose up -d php-fpm nginx'''
            }
        }
    }
}
